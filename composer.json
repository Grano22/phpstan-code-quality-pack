{
    "name": "grano22/code_quality_pack",
    "description": "Code quality toolset to help better maintain your code",
    "type": "library",
    "license": "mit",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpdoc-parser": "^2.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.51",
        "phpunit/phpunit": "^10.3",
        "guzzlehttp/guzzle": "^7.4",
        "phpro/grumphp": "^2.10",
        "spatie/phpunit-snapshot-assertions": "^5.1"
    },
    "autoload": {
        "psr-4": {
            "Grano22\\CodeQualityPack\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Grano22\\CodeQualityPack\\Tests\\Unit\\": "tests/unit",
            "Grano22\\CodeQualityPack\\Tests\\Kit\\": "tests/kit"
        }
    },
    "authors": [
        {
            "name": "Adrian BÅ‚asiak",
            "email": "grano22@outlook.com"
        }
    ],
    "config": {
        "bin-dir": "bin",
        "allow-plugins": {
            "phpro/grumphp": true
        }
    }
}
